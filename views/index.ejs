<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container text-center">
      <h1>Welcome to HikeUp</h1>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempore iure
        dolorem sed nisi facere repudiandae id dolores recusandae tempora
        ratione.
      </p>

      <p>
        <a class="btn btn-primary btn-lg" href="/parks/new">Add new park</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Favorite Parks</h3>
    </div>
  </div>

  <div class="row" style="display:flex; flex-wrap: wrap;">
    <% parks.forEach(function(park){ %>

    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= park.image %>" alt="" />
        <div class="caption">
          <h4><%= park.name %></h4>
          <p>
            <a href="/parks/<%= park._id %>" class="btn btn-info">More Info</a>
          </p>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</div>

<% include partials/footer %>
